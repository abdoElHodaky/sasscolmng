# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sasscolmng_dev?schema=public"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/sasscolmng_test?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PREFIX="api/v1"
SWAGGER_ENABLED=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@sasscolmng.com"

# WhatsApp Configuration
WHATSAPP_API_URL="https://api.whatsapp.com/send"
WHATSAPP_TOKEN="your-whatsapp-business-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# Payment Configuration
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Local Payment Gateway (Example: Tap Payments)
TAP_SECRET_KEY="sk_test_your-tap-secret-key"
TAP_PUBLIC_KEY="pk_test_your-tap-public-key"

# Monitoring & Logging
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DEST="./uploads"

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3001"

# Multi-tenancy
DEFAULT_TENANT_SCHEMA="public"
TENANT_HEADER="x-tenant-id"

